<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="16.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.consola.LeerDato">
    <padding>
        <Insets bottom="20.0" left="16.0" right="16.0" top="16.0"/>
    </padding>

    <Text text="Favor de ingresar un numero"/>
    <TextField fx:id="numero"/>
    <Button text="Agregar numero" onAction="#btnAgregar"/>
    <Button text="Sumar numero" onAction="#btnSuma"/>
    <TextField fx:id="resultado"/>
    <Button text="Salir" onAction="#btnSalir"/>
</VBox>
